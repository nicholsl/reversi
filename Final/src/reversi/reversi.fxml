<!--Fxml for Reversi game - lays out GUI for game in a borderpane -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import edu.carleton.gersteinj.reversi.BoardView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<BorderPane fx:controller="edu.carleton.gersteinj.reversi.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <top>
    <Button fx:id="undo" prefWidth="100.0"> Undo move </Button>
    </top>
    <center>
        <BoardView fx:id="boardView" squareSize="80"/>
    </center>

</BorderPane>