<!--Fxml for Reversi game - lays out GUI for game in a borderpane -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import edu.carleton.gersteinj.reversi.BoardView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<BorderPane fx:controller="edu.carleton.gersteinj.reversi.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <BorderPane.margin><Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/></BorderPane.margin>
    <top>
    <Button fx:id="undo" prefWidth="100.0"> Undo move </Button>
    </top>

    <bottom>
        <Text fx:id="toPlay"></Text>
    </bottom>

    <right>
        <Text fx:id="score">
        </Text>

    </right>

    <center>
        <BoardView fx:id="boardView" squareSize="80"/>
    </center>

</BorderPane>